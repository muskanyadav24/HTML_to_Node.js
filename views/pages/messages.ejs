<!DOCTYPE html>
<html>
<head>
  <title>Messages</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #589167;
    }
    .card {
      /* background-color: #F5F4F0; */
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      border-radius: 12px;
    }
    table th, table td {
      vertical-align: middle;
    }
    .btn-sm {
      min-width: 60px;
    }
  </style>
</head>
<body>

<div class="container mt-5">
  <div class="card p-4">
    <h2 class="mb-4 text-center">Messages</h2>

    <!-- BACK BUTTON -->
    <div class="mb-3">
      <a href="/contact" class="btn btn-secondary">Add new</a>
      <!-- /message-form is the route for the original form page -->
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Service</th>
            <th>Message</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% messages.forEach(m => { %>
          <tr>
            <td><%= m.name %></td>
            <td><%= m.email %></td>
            <td><%= m.service %></td>
            <td><%= m.message %></td>
            <td>
              <a href="/edit/<%= m.id %>" class="btn btn-success btn-sm me-1">Edit</a>
              <a href="/delete/<%= m.id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

</body>
</html>
